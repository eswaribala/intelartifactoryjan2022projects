pipeline {
    agent any
 
    stages {
        stage ('Clone') {
            steps {
                git branch: 'master', url: "https://github.com/eswaribala/intelartifactoryjan2022projects.git"
            }
        }
 
        stage ('Artifactory Configuration') {
            steps {
               
                  rtServer (
                    id: "ART",
                    url: "https://vebrepo.jfrog.io/",
                    credentialsId: "ARTID"
                )
 
                rtMavenResolver (
                    id: 'maven-resolver',
                    serverId: 'ART',
                    releaseRepo: 'veb-libs-release-local',
                    snapshotRepo: 'veb-libs-snapshot-local'
                )  
                 
                rtMavenDeployer (
                    id: 'maven-deployer',
                    serverId: "ART",
                    releaseRepo: 'veb-libs-release-local',
                    snapshotRepo: 'veb-libs-snapshot-local',
                    threads: 6,
                    properties: ['BinaryPurpose=Technical-BlogPost', 'Team=DevOps-Acceleration']
                )
            }
        }
        
        stage('Build Maven Project') {
            steps {
                rtMavenRun (
                    tool: 'maven',
                    pom: './productapi/pom.xml',
                    goals: 'clean install -DskipTests',
                    //deployerId: "maven-deployer",
                    //resolverId: "maven-resolver"
                )
            }
        }
 
        
    }
}